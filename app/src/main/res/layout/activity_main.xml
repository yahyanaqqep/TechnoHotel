<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="412dp"
        android:layout_height="805dp"
        android:contentDescription="@string/scroll_able"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/single_room"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:contentDescription="nice"
                app:srcCompat="@drawable/single_room" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="single room"
                app:autoSizePresetSizes="40dp"
                app:autoSizeTextType="none"
                app:fontFamily="sans-serif-condensed-medium"
                app:textAllCaps="false" />

            <ImageButton
                android:id="@+id/double_room"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:contentDescription="nice"
                app:srcCompat="@drawable/double_room_" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Double room" />

            <ImageButton
                android:id="@+id/suite"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                app:srcCompat="@drawable/suite" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Suite" />

            <ImageButton
                android:id="@+id/deluxe"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                app:srcCompat="@drawable/deluxe" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Deluxe" />

            <ImageButton
                android:id="@+id/view_room"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                app:srcCompat="@drawable/viewroom" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="View room" />

            <ImageButton
                android:id="@+id/studio"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                app:srcCompat="@drawable/studio" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Studio" />
        </LinearLayout>
        android:contentDescription="Enter How Much Cookies You Want"
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>